<%= @result %>
<h1>Productos</h1>
<%= form_for @product, :url => { :action => "create" }, :html => { :class => "form-inline"} do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name %>

	<%= f.label :value%>
	<%= f.text_field :value%>

	<%= f.label :quantity%>
	<%= f.text_field :quantity%>


<%= f.submit "Registrar producto",   :class => "btn btn-primary" %>
<% end %>

<table class="table table-bordered table-striped table-hover table-condensed">
	<thead>
					<tr>
						<th>Nombre</th>
						<th>Valor</th>
						<th>Cantidad</th>
						</th>
					</tr>
	</thead>
	<tbody>
  <% @products.each do |p| %>
						<tr>
							<td><%= html_escape(p.name) %></td>
							<td><%= html_escape(p.value) %></td>
							<td><%= html_escape(p.quantity) %></td>
							<td><%= link_to "delete_#{p.id}", product_path(p.id), :method => :delete%></i></td>
						</tr>
					<% end %>
	</tbody>
</table>
<%= debug(params) if Rails.env.development? %>
