<%= @result %>
<h1>Productos</h1>
<%= form_for @product, :url => { :action => "create" } do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name %>

	<%= f.label :value%>
	<%= f.text_field :value%>

	<%= f.label :quantity%>
	<%= f.text_field :quantity%>


<%= f.submit "Registrar producto" %>
<% end %>

<table>
  <tr>
		<th>Nombre</th>
		<th>Valor</th>
		<th>Cantidad</th>
  </tr>
  <% @products.each do |p| %>
    <tr>
      <td><%= html_escape(p.name) %></td>
      <td><%= html_escape(p.value) %></td>
      <td><%= html_escape(p.quantity) %></td>
    </tr>
  <% end %>
</table>
<%= debug(params) if Rails.env.development? %>
